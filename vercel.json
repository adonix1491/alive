{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        },
        {
            "src": "functions/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/hello",
            "dest": "/functions/hello.js"
        },
        {
            "src": "/api/gl",
            "dest": "/functions/gl.js"
        },
        {
            "src": "/api/guest-login",
            "dest": "/functions/guest-login.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/functions/index.ts"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}