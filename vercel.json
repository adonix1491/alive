{
    "version": 2,
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 10
        },
        "api/**/*.js": {
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/hello",
            "destination": "/api/hello"
        },
        {
            "source": "/api/auth/guest-login",
            "destination": "/api/auth/guest-login"
        },
        {
            "source": "/api/test-ping",
            "destination": "/api/test-ping"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!api/|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}