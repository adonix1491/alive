{
    "version": 2,
    "functions": {
        "api/dist/**/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/probe",
            "destination": "/api/dist/probe"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/dist/index"
        },
        {
            "source": "/((?!api/|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}