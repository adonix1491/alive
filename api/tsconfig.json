{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "strict": false,
            "esModuleInterop": true,
            "skipLibCheck": true,
            "forceConsistentCasingInFileNames": true,
            "resolveJsonModule": true,
            "moduleResolution": "node",
            "types": [
                "node"
            ]
        },
        "include": [
            "**/*.ts"
        ],
        "exclude": [
            "node_modules",
            "dist",
            "scripts"
        ]
    }